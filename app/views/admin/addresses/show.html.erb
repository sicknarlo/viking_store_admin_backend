<h2> <%= @address.user.full_name %>'s Address </h2>

<p>Owner ID: <%= @address.user.id %> </p>
<p>Owner name: <%= link_to "#{@address.user.full_name} (click to view user)", admin_user_path(@address.user.id) %></p>
<p>Street <%= @address.street_address %> </p>
<p>City <%= @address.city.name %> </p>
<p>State <%= @address.state.name %> </p>
<p>Zipcode <%= @address.zip_code %> </p>

<p><%= link_to "Edit Address", edit_admin_address_path(@address.id) %> </p>
<p><%= link_to "Delete Address", admin_address_path(@address.id), :method => :delete, data: { confirm: "Are you sure?" } %> </p>
