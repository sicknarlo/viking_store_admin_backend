<!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">The Viking Store
                    <small>Products</small>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Projects Row -->
        <div class="row">
            <div class="col-sm-12">
                <form>
                    <select name="filter">
                      <%= @categories.each do |category| %>
                        <option value="<%= category.id %>"><%= category.name %></option>
                      <% end %>
                    </select>
                    <input id="filter" type="submit" value="Filter">
                </form>
            </div>
        </div>

        <% @products.each_slice(3) do |slice| %>
            <div class="row">
                <% slice.each do |p| %>
                    <div class="col-md-4 img-portfolio">
                        <h3>
                            <%= link_to p.name, product_path(p) %>
                        </h3>
                        <h4>
                            $<%= p.price %>
                        </h4>
                        <p>
                            <%= p.description %>
                        </p>
                        <p>
                            <%= form_for(:order_content, url: add_to_cart_path(p.id), method: :put) do |f| %>
                                <%= f.hidden_field "product_id", value: p.id %>
                                <%= f.submit "Add to Cart", :class => "btn btn-warning btn-xs"%>
                            <% end %>
                        </p>
                    </div>
                <% end %>
            </div>
        <% end %>

        <hr>

        <!-- Pagination -->
        <div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                    <li>
                        <a href="#">&laquo;</a>
                    </li>
                    <li class="active">
                        <a href="#">1</a>
                    </li>
                    <li>
                        <a href="#">2</a>
                    </li>
                    <li>
                        <a href="#">3</a>
                    </li>
                    <li>
                        <a href="#">4</a>
                    </li>
                    <li>
                        <a href="#">5</a>
                    </li>
                    <li>
                        <a href="#">&raquo;</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- /.row -->

        <hr>