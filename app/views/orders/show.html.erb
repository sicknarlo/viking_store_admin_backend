<div class="col-sm-12 text-center">
  <h1>Order <%= @order.id %></h1>
</div>
<div class="col-sm-12 panel panel-default">
  <div class="panel-body">
    <h2 class='text-center'>
      Logistical Information
    </h2>
    <h3>
    Basic Information
    </h3>
    <table class="table">
      <tr>
        <td>Customer ID:</td>
        <td><%= @order.user_id %></td>
      </tr>
      <tr>
        <td>Customer</td>
        <td><%= link_to @order.user.full_name, user_path(@order.user) %></td>
      </tr>
      <tr>
        <td>E-mail</td>
        <td><%= @order.user.email %></td>
      </tr>
      <tr>
        <td>Date Placed</td>
        <td><%= @order.checkout_date.strftime("%m/%d/%Y") if @order.checkout_date %></td>
      </tr>
      <tr>
        <td>Products</td>
        <td><%= @order.products.count %></td>
      </tr>
      <tr>
        <td>Order Value</td>
        <td>$<%= @order.value %></td>
      </tr>
    </table>
    <%= link_to "Edit Customer Profile", edit_user_path(@order.user) %>
    <h3>
      Order Status
    </h3>
    <h2>
      <%= @order.status.html_safe%>
    </h2>
    <h3>
      Shipping Address
    </h3>
    <table class="table">
      <tr>
        <td>Street</td>
        <td><%= @order.shipping_address.street_address %></td>
      </tr>
      <tr>
        <td>City</td>
        <td><%= @order.shipping_address.city.name %></td>
      </tr>
      <tr>
        <td>State</td>
        <td><%= @order.shipping_address.state.name %></td>
      </tr>
    </table>
    <h3>
      Billing Address
    </h3>
    <table class="table">
      <tr>
        <td>Street</td>
        <td><%= @order.billing_address.street_address %></td>
      </tr>
      <tr>
        <td>City</td>
        <td><%= @order.billing_address.city.name %></td>
      </tr>
      <tr>
        <td>State</td>
        <td><%= @order.billing_address.state.name %></td>
      </tr>
    </table>
    <h3>
      Billing Card
    </h3>
    <table class="table">
      <tr>
        <td>Last Four Digits</td>
        <td><%= @order.user.credit_cards.first.card_number %></td>
      </tr>
    </table>
    <%= link_to "Edit Order", edit_order_path(@order) %>
    <br>
    <%= link_to "Delete Order", order_path(@order), method: :delete %>
  </div>
</div>

<div class="col-sm-12 panel panel-default">
  <div class="panel-body">
    <h2>
      Order Contents
    </h2>
    <table class="table">
      <tr>
        <th>ProductID</th>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total Price</th>
      </tr>
      <% OrderContent.where(:order_id => @order.id).each do |o| %>
        <tr>
          <td><%= o.product_id %></td>
          <td><%= o.product.name %></td>
          <td><%= o.quantity %></td>
          <td>$<%= o.product.price %></td>
          <td>$<%= o.quantity * o.product.price %></td>
        </tr></tr>
      <% end %>
    </table>
    <%= link_to "Edit Order", edit_order_path(@order) %>
    <br>
    <%= link_to "Delete Order", order_path(@order), method: :delete %>
  </div>
</div>